<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFeed.Resources.Pages.ChoosePage"
             Title="ChoosePage">
    <VerticalStackLayout>
        <Label 
            x:Name="ChooseLabel"
            Text="Choose Your Bet!!!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="1X"
                x:Name="Button1X"
                Clicked="Button1X_Clicked"
                Margin="20"
                FontSize="50"></Button>
        
        
        <Button Text="Fonbet"
                x:Name="ButtonFonBet"
                Clicked="ButtonFonBet_Clicked"
                Margin="20"
                FontSize="50"></Button>
        
        
        <Button Text="Dafa"
                Clicked="ButtonDafaBet_Clicked"
                x:Name="ButtonDafaBet"
                Margin="20"
                FontSize="50"></Button>
    </VerticalStackLayout>
</ContentPage>